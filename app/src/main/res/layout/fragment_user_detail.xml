<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.user_detail.UserDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_background_user"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextContent.TextHeading3"
            android:layout_marginTop="12dp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_user"
            tools:text="@string/username" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextContent.BodyS"
            android:layout_marginTop="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            tools:text="@string/description" />

        <LinearLayout
            android:id="@+id/LL_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_button_location" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/TextContent.BodyXS"
                android:layout_marginStart="4dp"
                tools:text="@string/location" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LL_location">

            <TextView
                android:id="@+id/tv_followers"
                style="@style/TextContent.BodyXS"
                android:text="@string/followers" />

            <TextView
                android:id="@+id/tv_followers_total"
                style="@style/TextContent.BodyXS"
                android:layout_marginStart="4dp"
                tools:text="@string/total_followers" />

            <View
                android:id="@+id/v_vertical_divider"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_margin="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:id="@+id/tv_followed"
                style="@style/TextContent.BodyXS"
                android:text="@string/following" />

            <TextView
                android:id="@+id/tv_followed_total"
                style="@style/TextContent.BodyXS"
                android:layout_marginStart="4dp"
                tools:text="@string/total_following" />

        </LinearLayout>

        <View
            android:id="@+id/v_horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorAccent"
            android:visibility="gone"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LL_followers"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintWidth_percent="1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_post"
            style="@style/TextContent.TextHeading3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/post"
            android:visibility="gone"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_horizontal_divider"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_community"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_post"

            app:reverseLayout="false"
            tools:listitem="@layout/item_community_tweet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>